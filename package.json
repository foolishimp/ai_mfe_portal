{
  "name": "ai-mfe-portal",
  "private": true,
  "version": "1.0.0",
  "description": "Generic microfrontend portal framework with configurable layouts and preferences",
  "keywords": ["microfrontend", "portal", "mfe", "framework", "react", "typescript"],
  "author": "AI MFE Portal Contributors",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:shared": "cd packages/shared && npm run build",
    "build:shell": "cd packages/shell && npm run build", 
    "build:test-app": "cd packages/test-app && npm run build",
    "build:all": "npm run build:shared && npm run build:shell && npm run build:test-app",
    "start": "python start_portal.py",
    "start:backend": "python start_portal.py --backend-only",
    "start:frontend": "python start_portal.py --frontend-only", 
    "start:prefs": "cd shell_service && python main.py",
    "start:shell": "cd packages/shell && npm run dev",
    "install:all": "npm install && npm run build:shared",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules",
    "dev": "npm run start",
    "test:dashboard": "PROJECT_DIRS=\".\" node test-dashboard-module/server.js",
    "test": "jest",
    "test:e2e": "jest tests/e2e",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "jest": "^29.7.0",
    "axios": "^1.6.7",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.ts",
      "**/__tests__/**/*.test.js",
      "**/__tests__/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/build/"
    ],
    "collectCoverageFrom": [
      "packages/*/src/**/*.{js,ts,tsx}",
      "shell_service/**/*.py",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/jest.setup.js"]
  }
}